/* pages/myfavorite/myfavorite.wxss */

.goodList {
  width: 94%;
  padding: 0 3%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goodItem {
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #F4F4F4;
}

.goodItem image {
  width: 35%;
  height: 70%;
  border-radius: 5rpx;
}

.detail {
  width: 60%;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goodName {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 50rpx;
  color: rgba(53, 53, 53, 1);
}

.goodType {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(102, 102, 102, 1);
}

.Price {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  align-items: center;
  align-items: center;
}

.goodPrice {
  font-size: 36rpx;
  font-family: DIN;
  font-weight: bold;
  color: rgba(251, 123, 45, 1);
  margin-right: 30rpx;
}

.goodDiscount {
  font-size: 22rpx;
  font-family: DIN;
  font-weight: 400;
  color: rgba(185, 185, 185, 1);
  text-decoration: line-through;
  margin-right: 30rpx;
}

.goodNum {
  font-size: 22rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  opacity: 0.9;
}