/* pages/myinvitation/myinvitation.wxss */
Page {
  padding: 0;
  margin: 0;
}

.container {
  width: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}

image {
  position: absolute;
  width: 100%;
  z-index: -2;
}

.title {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 50rpx;
  color: rgba(148, 79, 0, 1);
  letter-spacing: 12rpx;
  position: absolute;
  top: 900rpx;
  margin: 0 auto;
}

.threeImg {
  position: absolute;
  top: 1000rpx;
  width: 80%;
  height: 140rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.ImgItem {
  display: flex;
  width: 30%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circle {
  width: 90rpx;
  height: 90rpx;
  background-color: white;
  border-radius: 50%;
}

.ImgItem image {
  width: 50rpx;
  height: 50rpx;
  z-index: 1;
  margin-top: 18rpx;
  margin-left: 20rpx;
}

.intro {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(162, 87, 0, 1);
  opacity: 0.8;
}

.btn {
  position: absolute;
  margin: 0 auto;
  top: 1300rpx;
  right: 30%;
  font-size: 36rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 54rpx;
  color: rgba(255, 255, 255, 1);
}

.invitation {
  position: absolute;
  top: 1560rpx;
  width: 80%;
  height: 150rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  z-index: 1;
  align-items: center;
  justify-content: center;
}

.left {
  width: 40%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.right {
  border-left: 2rpx solid #E8E8E8;
}

.footerTitle {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(136, 136, 136, 1);
  margin-bottom: 20rpx;
}

.num {
  color: #FF4845;
  font-size: 56rpx;
  font-weight: 600;
}

.num1 {
  color: #353535;
  font-size: 24rpx;
}

.rightnum {
  color: #353535;
  font-size: 56rpx;
  font-weight: 600;
}

.detail {
  position: absolute;
  top: 1720rpx;
  left: 42%;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  height: 40rpx;
  color: rgba(250, 146, 11, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.detailright {
  width: 0px;
  height: 0px;
  margin-left: 10rpx;
  border-bottom: 10rpx solid transparent;
  border-left: 14rpx solid #FA920B;
  /*transparent 表示透明*/
  border-top: 10rpx solid transparent;

}