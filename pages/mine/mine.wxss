/* pages/mine/mine.wxss */
Page{
  background-color: white;
}
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 700rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.header_text{
  text-align: center;
  font-size: 40rpx;
  line-height: 80rpx;
}

.header image {
  width: 180rpx;
  height: 180rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

.personal{
  width: 100%;
  height: 300rpx;
  padding-left: 5%;
  padding-top:30rpx; 
  background-image: linear-gradient(to right,#FA9933 , #FB7B2D);
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  align-content: center;
  justify-content: start;
  color: white;
  
}
.line{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: space-around;
}
.line1{
    margin-top: 20rpx;
    white-space:nowrap;
    overflow:hidden;
    font-size: 40rpx;
    font-family:Source Han Sans CN;
    font-weight:600;
    margin-bottom: 40rpx;
    /* text-overflow:ellipsis;  */
}
.line2{
    white-space:nowrap;
    overflow:hidden;
    font-family:Source Han Sans CN;
    font-size: 30rpx;
}
 
.userAvatarUrl {
  width: 160rpx;
  height: 160rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 60rpx;
}
.userNickName{
  display: block;
}

.threeFunction{
  width: 90%;
  height: 180rpx;
  background-color: white;
  border-radius: 18rpx;
  margin-top: -100rpx;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-around;
  position: relative;
  box-shadow: 0rpx 5rpx 9rpx 3rpx#eeeeee;
}

.threeFunItem{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  align-content: center;
  font-size: 24rpx;
  color: #666666;
}

.threeFunItem image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.personal_function{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: space-around;
  position: relative;
  margin-left: 5%;
  margin-right: 5%;
}

.personal_function image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.myFunction{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  flex-wrap:nowrap;
}

.setting{
  /* margin-top: 50rpx; */
  line-height: 100rpx;
  width: 82vw;
  height: 100rpx;
  border-bottom:2rpx solid #F4F4F4;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: space-around;
  justify-content: space-between;
}

.right{
  width: 40rpx;
  height: 40rpx;
}
