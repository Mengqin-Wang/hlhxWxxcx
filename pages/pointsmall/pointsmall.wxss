/* pages/pointsmall/pointsmall.wxss */
Page {
  background-color: #F4F4F4;
}

.header {
  margin: 30rpx 0;
  width: 100%;
  height: 200rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.sum {
  line-height: 80rpx;
  font-size: 46rpx;
  font-family: DIN;
  font-weight: bold;
  color: rgba(251, 123, 45, 1);
}

.headerItem {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.headerItem image {
  margin-left: calc((25vw-80rpx)/2);
  width: 80rpx;
  height: 80rpx;
}

.name {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(53, 53, 53, 1);
  text-align: center;
}

.main {
  width: 94%;
  padding: 26rpx 3%;
  background-color: white;
  border-radius: 30rpx;
}

.title {
  line-height: 50rpx;
  border-left: 10rpx solid #FB7B2D;
  font-size: 36rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
  text-indent: 10rpx;
  letter-spacing: 5rpx;
  margin-bottom: 30rpx;
}

.hr {
  width: 100%;
  height: 2rpx;
  background-color: #F4F4F4;
}

.goodList {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.goodItem {
  width: 47%;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  border: 2rpx solid #E4E4E4;
  align-items: center;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

.goodItem image {
  width: 100%;
  height: 260rpx;
  border-radius: 10rpx;
}

.goodTitle {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 60rpx;
  color: rgba(51, 51, 51, 1);
}

.need {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(255, 113, 40, 1);
  margin:20rpx 0;
}

.btn{
  width: 140rpx;
  height: 50rpx;
  font-size: 24rpx;
  color: rgba(255,113,40,1);
  border:2rpx solid rgba(255,113,40,1);
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
}