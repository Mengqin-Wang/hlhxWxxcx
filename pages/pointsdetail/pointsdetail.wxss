/* pages/pointsrecord/pointsrecord.wxss */
Page {
  background-color: #F4F4F4;
}

.main {
  margin-top: 30rpx;
  width: 92%;
  padding: 0 4%;
  background-color: white;
  border-radius: 20rpx;
}

.item {
  height: 140rpx;
  width: 100%;
  border-bottom: 2rpx solid #F4F4F4;
}

.name {
  font-size: 34rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 70rpx;
  color: rgba(51, 51, 51, 1);
}

.points {
  font-size: 32rpx;
  font-family: Roboto;
  font-weight: 400;
  line-height: 70rpx;
  color: rgba(255, 113, 40, 1);
  position: absolute;
  right: 5%;
}

.date {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(185, 185, 185, 1);
}