/* pages/order/order.wxss */
Page {
  background-color: #F4F4F4;
}

.tabList {
  background-color: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  justify-content: space-evenly;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 80rpx;
  color: rgba(53, 53, 53, 1);
}


.active {
  color: #FB7B2D;
  border-bottom: #FB7B2D 8rpx solid;
}

.tabWhite {
  width: 100%;
  height: 20rpx;
  background-color: white;
}

.item {
  width: 94%;
  padding: 0 3%;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.dateType {
  margin: 20rpx 0;
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
  font-family: DIN;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(51, 51, 51, 1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.paidactive {
  color: #FB7B2D;
}

.hr {
  width: 100%;
  height: 2rpx;
  background-color: #E4E4E4;
  margin-bottom: 30rpx;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.main image {
  width: 40%;
  height: 180rpx;
  margin-bottom: 30rpx;
  margin-right: 50rpx;
}

.name {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 20rpx;
  margin-bottom: 60rpx;
}

.price {
  font-size: 38rpx;
  font-family: DIN;
  font-weight: bold;
  line-height: 60rpx;
  color: rgba(255, 113, 40, 1);
}

.discount {
  text-decoration: line-through;
  font-size: 22rpx;
  font-family: Roboto;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(185, 185, 185, 1);
}

.btn{
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.cancel {
  width: 200rpx;
  height: 60rpx;
  margin-right: 30rpx;
  border: 2rpx solid rgba(232, 232, 232, 1);
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(136, 136, 136, 1);
  border-radius: 35rpx;
  text-align: center;
}

.pay{
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid #FB7B2D;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: #FB7B2D;
  border-radius: 35rpx;
  text-align: center;
}