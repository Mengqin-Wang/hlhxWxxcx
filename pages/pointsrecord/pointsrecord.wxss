/* pages/pointsdetail/pointsdetail.wxss */
Page {
  background-color: #F4F4F4;
}

.item {
  width: 92%;
  margin-top: 34rpx;
  padding: 0 4%;
  border-radius: 16rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  /* height: 280rpx; */
}

.date {
  padding-top: 24rpx;
  font-size: 22rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(153, 153, 153, 1);
}

.main {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main image {
  width: 30%;
  height: 150rpx;
  border-radius: 5rpx;
}

.message {
  width: 40%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  padding: 0 5%;
}

.title {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 56rpx;
  color: rgba(51, 51, 51, 1);
}

.need {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(102, 102, 102, 1);
}

.code {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 113, 40, 1);
}

.type {
  width: 140rpx;
  height: 60rpx;
  border: 1px solid rgba(251, 123, 45, 1);
  border-radius: 30rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(255, 113, 40, 1);
  text-align: center;
}

.type2{
  border:1px solid rgba(244,244,244,1) !important;
  color: #B2B2B2 !important;
}