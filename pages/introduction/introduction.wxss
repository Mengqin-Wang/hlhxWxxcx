/* pages/introduction.wxss */
.flex {
  display: flex;
}

.small_text {
  font-size: 26rpx;
}

.grey_color {
  color: #999;
}

.top_banner {
  width: 100%;
  height: 500rpx;
}

.top_banner swiper {
  width: 100%;
  height: 100%;
}

.top_banner image {
  width: 100%;
  height: 100%;
}

.agency_title {
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
}

.agency_name {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.collection_box {
  width: 120rpx;
  height: 50rpx;
  position: relative;
  top: 15rpx;
}

.collection_box image {
  width: 100%;
  height: 100%;
}

.agency_info {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
}

.agency_add,
.serve_time {
  border-bottom: 1px solid #F4F4F4;
  height: 100rpx;
  overflow: hidden;
  line-height: 100rpx;
}

.agency_add {
  justify-content: space-between;
}

.add_icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 15rpx;
}

.add_icon image {
  width: 50rpx;
  height: 50rpx;
}

.phone_call {
  position: absolute;
  right: 0;
}

.phone_call::after {
  content: '';
  height: 50rpx;
  width: 1rpx;
  background: #F4F4F4;
  position: absolute;
  left: 0;
  top: 20rpx;
}

.getphone {
  background: #fff;
  position: relative;
  top: 15rpx;
  right: 5%;
  width: 40rpx !important;
  padding: 0;
}

.getphone::after {
  border: none;
}

.getphone image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  position: relative;
  top: 10rpx;
}

.time_icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 15rpx;
}

.time_icon image {
  width: 100%;
  height: 100%;
}

.see_more {
  justify-content: space-between;
  line-height: 100rpx;
}

.more_right {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 10rpx;
  right: -10rpx;
}

.more_text {
  line-height: 100rpx;
}

.more_right image {
  width: 100%;
  height: 100%;
}

.agency_content {
  width: 100%;
  padding: 0 20rpx 60rpx;
  color: #666;
  background: #fff;
  margin-top: 20rpx;
  box-sizing: border-box;

}

.content_title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  line-height: 80rpx;
}

.content_text {
  font-size: 26rpx;
  line-height: 50rpx;
}