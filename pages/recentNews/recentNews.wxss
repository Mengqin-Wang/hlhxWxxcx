/* pages/recentNews/recentNews.wxss */
.dynamic {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-evenly;
  background-color: #F4F4F4;
}

.main {
  background-color: white;
  width: 45%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  border-radius: 10rpx;
}

.main image {
  width: 100%;
  height: 360rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.data {
  font-size: 24rpx;
  font-family: DIN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(136, 136, 136, 1);
}

.title {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 30rpx;
  color: rgba(53, 53, 53, 1);
}