/* pages/myregistration/myregistration.wxss */
.listItem {
  width: 94%;
  height: 260rpx;
  margin: 0 3%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-bottom: 2rpx solid #F4F4F4;
}

.listItem image {
  width: 34%;
  height: 70%;
  border-radius: 4rpx;
}

.main {
  width: 56%;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 40rpx;
  color: rgba(17, 17, 17, 1);
}

.dateTime {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.date {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(153, 153, 153, 1);
}

.type {
  width: 180rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.orange{
  background:linear-gradient(90deg,rgba(250,153,51,1) 0%,rgba(251,123,45,1) 100%);
}

.type2{
  background-color: #999999 !important;
}