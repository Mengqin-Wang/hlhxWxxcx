/* pages/teacher/teacher.wxss */
Page {
  background-color: #F4F4F4;
}

.intro {
  width: 100%;
  margin-top: 30rpx;
  /* height: 500rpx; */
  border-radius: 20rpx;
  background-color: white;
}

.header {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header image {
  width: 180rpx;
  height: 180rpx;
}

.title {
  width: 200rpx;
  height: 180rpx;
}

.name {
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  line-height: 90rpx;
  color: rgba(53, 53, 53, 1);
}

.teach {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  line-height: 60rpx;
  color: rgba(53, 53, 53, 1);
}

.btn {
  width: 160rpx;
  height: 60rpx;
  background: rgba(251, 123, 45, 1);
  border-radius: 30rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  position: absolute;
  right: 30rpx;
}

.msg {
  margin-left: 5%;
  margin-right: 5%;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(53, 53, 53, 1);
  padding-bottom: 40rpx;
}


.headerTab {
  margin-top: 50rpx;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  justify-content: space-evenly;
  font-size: 34rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 120rpx;
  color: rgba(53, 53, 53, 1);
  border-bottom: 2rpx #F4F4F4 solid;
}

.active {
  color: #FB7B2D;
  border-bottom: #FB7B2D 8rpx solid;
}

.Attention {
  color: #B2B2B2;
  border: 2rpx solid #B2B2B2;
  background-color: white;
}

.Major {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
}

.majorItem {
  width: 50%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
}

.majorItem image {
  width: 92%;
  height: 240rpx;
  border-radius: 10rpx;
  margin-left: 4%;
}

.MajorTitle {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 56rpx;
  color: rgba(0, 0, 0, 1);
  margin-left: 4%;
}

.price {
  margin-left: 4%;
}

.price1 {
  font-size: 34rpx;
  font-family: DIN;
  font-weight: 500;
  line-height: 50rpx;
  color: rgba(255, 113, 40, 1);
}

.discount {
  font-size: 22rpx;
  font-family: DIN;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(185, 185, 185, 1);
  text-decoration: line-through;
  margin-left: 3%;
}

.num {
  font-size: 22rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(185, 185, 185, 1);
  opacity: 0.9;
  float: right;
  margin-right: 4%;
}

.WorkImg {
  width: 100%;
  padding-top: 20rpx;
  background-color: white;
  display: grid;
  grid-template-columns: 60% 40%;
  grid-template-rows: 200rpx 200rpx 200rpx;
  grid-auto-flow: row dense;
}

.item{
  box-sizing: border-box;
  padding: 20rpx
}

.item image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

li:first-child {
  grid-row-start: 1;
  grid-row-end: 4;  
}