/* pages/exchangeMall/exchangeMall.wxss */
.header {
  width: 92%;
  margin: 0 4%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 2rpx solid #F4F4F4;
  line-height: 100rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
}

.active {
  color: #FB7B2D;
  border-bottom: 10rpx solid #FB7B2D;
}

.itemTitle {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 48rpx;
}

.item {
  width: 94%;
  margin: 0 3%;
  border-bottom: 2rpx solid #F4F4F4;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item image {
  width: 36%;
  height: 180rpx;
}

.detail {
  width: 55%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dateBtn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.date {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(153, 153, 153, 1);
}

.btn {
  width: 160rpx;
  height: 70rpx;
  border-radius: 35rpx;
  color: white;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 70rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(250, 153, 51, 1) 0%, rgba(251, 123, 45, 1) 100%);
}