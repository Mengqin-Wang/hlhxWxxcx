/* pages/outline/outline.wxss */
.HeaderSwiper {
  width: 100%;
  height: 1000rpx;
  background: linear-gradient(180deg, rgba(255, 180, 76, 1) 0%, rgba(255, 100, 53, 1) 100%);
}

.swiper-block {
  height: 100%;
  width: 100%;
}

.swiper-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
}

.box {
  width: 550rpx;
  height: 700rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.6);
  box-shadow: 0px 0px 30rpx rgba(0, 0, 0, 0.2);
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.active {
  transition: all 0.2s ease-in 0s;
  background-color: white;
  z-index: 20;
  height: 800rpx;
}

.box image {
  width: 60%;
  height: 50%;
}

.detail {
  width: 35%;
  height: 60rpx;
  background: linear-gradient(90deg, rgba(255, 113, 40, 1) 0%, rgba(255, 83, 40, 1) 100%);
  color: white;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  box-shadow: 0px 0px 3rpx rgba(0, 0, 0, 0.2);
}

.share {
  margin: 50rpx auto;
  background: linear-gradient(90deg, rgba(250, 153, 51, 1) 0%, rgba(251, 123, 45, 1) 100%);
  width: 80%;
  height: 80rpx;
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 50rpx;
  text-align: center;
  border-radius: 40rpx;
  color: rgba(255, 255, 255, 1);
}

.name {
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(251, 123, 45, 1);
}