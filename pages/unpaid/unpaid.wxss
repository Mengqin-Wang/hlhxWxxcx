/* pages/unpaid/unpaid.wxss */
Page {
  background-color: #F4F4F4;
}

.type {
  font-size: 50rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  line-height: 120rpx;
  color: rgba(51, 51, 51, 1);
  margin-left: 30rpx;
}

.detail {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(102, 102, 102, 1);
  margin-left: 30rpx;
  margin-bottom: 40rpx;
}

.informationClass {
  background-color: white;
  width: 94%;
  padding: 0rpx 3%;
  border-radius: 8rpx;
}

.ClassMain {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
}

.ClassMain image {
  width: 35%;
  height: 160rpx;
  margin-right: 10%;
  border-radius: 4rpx;
}

.ClassTitle {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 80rpx;
  color: rgba(51, 51, 51, 1);
}

.ClassPrice {
  font-size: 44rpx;
  font-family: DIN;
  font-weight: bold;
  line-height: 80rpx;
  color: rgba(255, 113, 40, 1);
}

.TestTime {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.TestPrice {
  font-size: 32rpx;
  font-family: DIN;
  font-weight: 400;
  color: rgba(255, 113, 40, 1);
}

.shouldPay {
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.shouldText {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.shouldPrice {
  font-size: 40rpx;
  font-family: DIN;
  font-weight: 400;
  color: rgba(255, 113, 40, 1);
}

.informationRegistration {
  margin-top: 40rpx;
  background-color: white;
  width: 94%;
  padding: 0rpx 3%;
  border-radius: 8rpx;
}

.RegistrationTitle {
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F4F4F4;
}

.RegistrationDetail {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  border-bottom: 2rpx solid #F4F4F4;
}

.PersonalName {
  font-size: 16px;
  font-family: Source Han Sans CN;
  line-height: 24px;
  color: rgba(0, 0, 0, 1);
}


.btn{
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin: 60rpx 100rpx 200rpx -50rpx;
}

.cancel {
  width: 200rpx;
  height: 70rpx;
  margin-right: 30rpx;
  border: 2rpx solid #FB7B2D;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 70rpx;
  color: #FB7B2D;
  border-radius: 35rpx;
  text-align: center;
}

.pay{
  width: 200rpx;
  height: 70rpx;
  border: 2rpx solid #FB7B2D;
  background-color: #FB7B2D;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 70rpx;
  color: white;
  border-radius: 35rpx;
  text-align: center;
}