.header {
  width: 80%;
  margin-left: 10%;
  margin-top: 40rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.headerItem {
  font-size: 30rpx;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.active {
  background-color: #FB7B2D;
  border: 2rpx solid #FB7B2D;
  color: white;
}

.notactive {
  background-color: white;
  color: #FB7B2D;
  border: 2rpx solid #FB7B2D;
}

.item {
  width: 92%;
  height: 140rpx;
  border-bottom: 2rpx solid #F4F4F4;
  margin: 0 4%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.name1 {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 60rpx;
  color: rgba(51, 51, 51, 1);
}

.date {
  font-size: 24rpx;
  font-family: Roboto;
  font-weight: 400;
  line-height: 30rpx;
  color: rgba(153, 153, 153, 1);
}

.num{
  position: absolute;
  right: 5%;
}