/* component/select/select.wxss */
.com-selectBox{
  width: inherit;
  border:0;
  border-radius: 14rpx;
}
.com-sContent{
  /* border: 1px solid #e2e2e2; */
  /* background: white; */
  font-size: 16px;
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  color: #B9B9B9;
  /* background-color: white; */
}
.com-sImg{
  position: absolute;
  right: 10px;
  top: 11px;
  width: 16px;
  height: 9px;
  transition: all .3s ease;
}
.com-sTxt{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding:0 20px 0 6px;
  font-size: 30rpx;
  color: #B9B9B9;
}
.com-sList{
  background: white;
  width: 300rpx;
  position: absolute;
  border: 1px solid #e2e2e2;
  border-radius: 20rpx;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  max-height: 150px;
  overflow: auto;
}
.com-sItem{
  height: 50px;
  line-height: 50px;
  border-top: 1px solid #e2e2e2;
  padding: 0 6px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #B9B9B9;
}
.com-sItem:first-child{
  border-top: none;
}